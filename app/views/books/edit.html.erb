<h1>Editing Book</h1>

<%if@book.errors.any? %>
<div id="error_explanation">
<h3><%=@book.errors.count %>errors prohibited this book from being saved:</h3>
 <ul>
  <%@book.errors.full_messages.each do |message|%>
  <li><%=message %></li>
  <% end %>
 </ul>
 <% end %>
</div>


<div class="edit_book">
 <%=form_with model:@book do |f| %>
 <div class="field">
 <div>Title</div>
 <%=f.text_field:title %>
 </div>
 <div class="field">
 <div>Body</div>
 <%=f.text_area:body %>
 </div>
 <div class="field">
   <%=f.submit'Update Book'%>
 </div>
</div>
<%=link_to"Show",book_path(@book.id)%> |
<%=link_to"Back",'/books'%>


<% end %>
